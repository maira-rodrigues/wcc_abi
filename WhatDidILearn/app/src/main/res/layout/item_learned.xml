<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/container_padding">

    <TextView
        tools:text="O sistema de tipos de Kotlin visa eliminar o perigo de referências nulas do código"
        android:id="@+id/text_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/text_item_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layout_item_level"
        android:padding="@dimen/text_padding"/>

    <TextView
        tools:text="O Design Editor exibe o layout em vários dispositivos e versões do Android.É "
        android:id="@+id/text_item_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/layout_item_level"
        app:layout_constraintTop_toBottomOf="@+id/text_item_title"
        tools:layout_editor_absoluteY="152dp"
        android:padding="@dimen/text_padding"/>

    <LinearLayout
        android:id="@+id/layout_item_level"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="#FF0000"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/text_item_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_item_title"
        app:layout_constraintVertical_bias="0.524" />
</androidx.constraintlayout.widget.ConstraintLayout>